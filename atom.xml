---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

 <title>Codeship Blog</title>
 <link href="blog.codeship.io/atom.xml" rel="self"/>
 <link href="http://blog.codeship.io/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://blog.codeship.io/</id>
 <author>
   <name>Codeship Team</name>
   <email>contact@codeship.io</email>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title | xml_escape }}</title>
   <link href="http://blog.codeship.io{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://blog.codeship.io{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}

</feed>
